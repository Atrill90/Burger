<div class="container jumbotron">
  <h1>Burgers!</h1>
  <hr>
  <img src="/assets/img/burgermonster.jpg" alt="">
</div>

 



<div class="container">
  <div class="row">
    <div class="col-md-4">
      <h1>Eat these burgers!!!</h1>
         <ul>
            {{#each burgers}} 
              {{#unless devoured}}
                {{> burgers/burger-block devour=false}}
              {{/unless}}
            {{/each}}
        </ul>
    </div>
    <div class="col-md-4">
      <h2>Add a Burger</h2>
      <form action = "/" method = "POST" class="create-form">

        <div class="form-group">
          <label for="bg">Burger Name:</label>
          <input type="text" id="bg" name="name">
        </div>

        <button class = "btn btn-success" type="submit">Add Burger</button>
      </form>

    </div>
    <div class="col-md-4">
<h2>Burgers that were Devoured</h2>
        
           <ul>
              {{#each burgers}}
                {{#if devoured}}
                  {{> burgers/devoured-burgers devour=true}}
                {{/if}}
              {{/each}}
          </ul>
    </div>
  </div>
</div>

   
    
    



 
  












